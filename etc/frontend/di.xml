<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="ccohs\PaymentMonerisHPP\Model\ConfigProvider" type="Magento\Payment\Model\CcGenericConfigProvider">
        <arguments>
            <argument name="methodCodes" xsi:type="array">
                <item name="ccohs_moneris" xsi:type="const">ccohs\PaymentMonerisHPP\Model\Payment::CODE</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="ccohs_moneris_config_provider" xsi:type="object">ccohs\PaymentMonerisHPP\Model\ConfigProvider</item>
            </argument>
        </arguments>
    </type>

</config>
